<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <title>Estadías - Agencia de Viajes</title>
  <link rel="stylesheet" href="/styles.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    .btn-success i {
      margin-right: 8px;
    }
    .table th {
      background-color: #f3f4f6;
      font-weight: 600;
    }
    .btn-edit, .btn-delete {
      padding: 6px 12px;
      border-radius: 4px;
      font-size: 0.875rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s;
    }
    .btn-edit {
      background-color: #3b82f6;
      color: white;
      border: 1px solid #2563eb;
    }
    .btn-edit:hover {
      background-color: #2563eb;
    }
    .btn-delete {
      background-color: #ef4444;
      color: white;
      border: 1px solid #dc2626;
    }
    .btn-delete:hover {
      background-color: #dc2626;
    }
  </style>
<body>
  <div class="layout">
    <aside class="sidebar">
      <%- include('../partials/sidebar', { user: user, active: 'estadias' }) %>
    </aside>
    <section class="main">
      <%- include('../partials/topbar', { user: user }) %>
      <div class="content">
        <div class="card">
          <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold text-gray-800">
              <i class="fas fa-hotel mr-2"></i>Estadías
            </h1>
            <a class="btn btn-success" href="/estadias/new">
              <i class="fas fa-plus"></i>Nueva estadía
            </a>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th><i class="fas fa-hashtag mr-1"></i> ID Reserva</th>
                <th><i class="fas fa-hotel mr-1"></i> Hotel</th>
                <th><i class="fas fa-sign-in-alt mr-1"></i> Llegada</th>
                <th><i class="fas fa-sign-out-alt mr-1"></i> Partida</th>
                <th><i class="fas fa-utensils mr-1"></i> Régimen</th>
                <th><i class="fas fa-cog mr-1"></i> Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% for (const it of items) { %>
                <tr>
                  <td><%= it.ID_RESERVA %></td>
                  <td><%= it.COD_HOTEL %></td>
                  <td><%= it.FECHA_LLEGADA %></td>
                  <td><%= it.FECHA_PARTIDA %></td>
                  <td><%= it.REGIMEN %></td>
                  <td>
                    <div class="flex space-x-2">
                      <a class="btn-edit" href="/estadias/<%= it.ID_RESERVA %>/<%= it.COD_HOTEL %>/<%= it.FECHA_LLEGADA %>/edit">
                        <i class="fas fa-edit"></i> Editar
                      </a>
                      <form method="post" action="/estadias/<%= it.ID_RESERVA %>/<%= it.COD_HOTEL %>/<%= it.FECHA_LLEGADA %>/delete" onsubmit="return confirm('¿Estás seguro de eliminar esta estadía?');">
                        <button class="btn-delete" type="submit">
                          <i class="fas fa-trash"></i> Eliminar
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  </div>
</body>
</html>
