<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Estadías</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="layout">
    <aside class="sidebar">
      <%- include('../partials/sidebar', { user: user, active: 'estadias' }) %>
    </aside>
    <section class="main">
      <%- include('../partials/topbar', { user: user }) %>
      <div class="content">
        <div class="card">
          <div style="text-align:right; margin-bottom:8px;">
            <a class="btn btn-success" href="/estadias/new">Nueva estadía</a>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th>ID Reserva</th><th>Hotel</th><th>Llegada</th><th>Partida</th><th>Régimen</th><th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% for (const it of items) { %>
                <tr>
                  <td><%= it.ID_RESERVA %></td>
                  <td><%= it.COD_HOTEL %></td>
                  <td><%= it.FECHA_LLEGADA %></td>
                  <td><%= it.FECHA_PARTIDA %></td>
                  <td><%= it.REGIMEN %></td>
                  <td>
                    <a class="btn-edit" href="/estadias/<%= it.ID_RESERVA %>/<%= it.COD_HOTEL %>/<%= it.FECHA_LLEGADA %>/edit">Editar</a>
                    <form method="post" action="/estadias/<%= it.ID_RESERVA %>/<%= it.COD_HOTEL %>/<%= it.FECHA_LLEGADA %>/delete" style="display:inline" onsubmit="return confirm('¿Eliminar estadía?');">
                      <button class="btn-delete" type="submit">Eliminar</button>
                    </form>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  </div>
</body>
</html>
