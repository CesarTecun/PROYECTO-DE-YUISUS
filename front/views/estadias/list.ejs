<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Estadías</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <header class="container">
    <h1>Estadías</h1>
    <nav class="nav">
      <a href="/">Inicio</a>
      <% if (user) { %>
        <a href="/sucursales">Sucursales</a>
        <a href="/hoteles">Hoteles</a>
        <a href="/vuelos">Vuelos</a>
        <a href="/turistas">Turistas</a>
        <a href="/reservas">Reservas</a>
        <a href="/estadias/new">Nueva estadía</a>
        <span style="flex:1"></span>
        <span>Hola, <strong><%= user.username %></strong></span>
        <a href="/logout">Salir</a>
      <% } else { %>
        <a href="/login">Login</a>
        <a href="/register">Registro</a>
      <% } %>
    </nav>
  </header>
  <main class="container">
    <div class="card">
      <table class="table">
        <thead>
          <tr>
            <th>ID Reserva</th><th>Hotel</th><th>Llegada</th><th>Partida</th><th>Régimen</th><th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% for (const it of items) { %>
            <tr>
              <td><%= it.ID_RESERVA %></td>
              <td><%= it.COD_HOTEL %></td>
              <td><%= it.FECHA_LLEGADA %></td>
              <td><%= it.FECHA_PARTIDA %></td>
              <td><%= it.REGIMEN %></td>
              <td>
                <a href="/estadias/<%= it.ID_RESERVA %>/<%= it.COD_HOTEL %>/<%= it.FECHA_LLEGADA %>/edit">Editar</a>
                <form method="post" action="/estadias/<%= it.ID_RESERVA %>/<%= it.COD_HOTEL %>/<%= it.FECHA_LLEGADA %>/delete" style="display:inline" onsubmit="return confirm('¿Eliminar estadía?');">
                  <button type="submit">Eliminar</button>
                </form>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </main>
</body>
</html>
