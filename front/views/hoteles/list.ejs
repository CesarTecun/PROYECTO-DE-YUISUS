<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Hoteles</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="layout">
    <aside class="sidebar">
      <%- include('../partials/sidebar', { user: user, active: 'hoteles' }) %>
    </aside>
    <section class="main">
      <%- include('../partials/topbar', { user: user }) %>
      <div class="content">
        <div class="table-card">
          <div class="table-toolbar">
            <span style="flex:1"></span>
            <a class="btn btn-success" href="/hoteles/new">Nuevo hotel</a>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th>Código</th>
                <th>Nombre</th>
                <th>Dirección</th>
                <th>Ciudad</th>
                <th>Teléfono</th>
                <th>Plazas</th>
                <th class="th-right">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% for (const it of items) { %>
                <tr>
                  <td><%= it.COD_HOTEL %></td>
                  <td><%= it.NOMBRE %></td>
                  <td><%= it.DIRECCION %></td>
                  <td><%= it.CIUDAD %></td>
                  <td><%= it.TELEFONO %></td>
                  <td><%= it.PLAZAS_TOTALES %></td>
                  <td>
                    <div class="td-actions" style="justify-content:flex-end">
                      <a class="btn-edit" href="/hoteles/<%= it.COD_HOTEL %>/edit">Editar</a>
                      <form method="post" action="/hoteles/<%= it.COD_HOTEL %>/delete" onsubmit="return confirm('¿Eliminar hotel <%= it.COD_HOTEL %>?');">
                        <button class="btn-delete" type="submit">Eliminar</button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  </div>
</body>
</html>
