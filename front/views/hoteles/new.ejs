<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Nuevo hotel</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="layout">
    <aside class="sidebar">
      <%- include('../partials/sidebar', { user: user, active: 'hoteles' }) %>
    </aside>
    <section class="main">
      <%- include('../partials/topbar', { user: user }) %>
      <div class="content">
        <div class="panel" style="max-width:560px">
          <h1>Nuevo hotel</h1>
          <form class="form" method="post" action="/hoteles">
            <label>Código</label>
            <input class="input" name="cod" required />
            <label>Nombre</label>
            <input class="input" name="nombre" required />
            <label>Dirección</label>
            <input class="input" name="direccion" />
            <label>Ciudad</label>
            <input class="input" name="ciudad" />
            <label>Teléfono</label>
            <input class="input" name="telefono" />
            <label>Plazas totales</label>
            <input class="input" type="number" name="plazas" min="0" value="0" />
            <div style="display:flex;gap:10px;justify-content:flex-end;margin-top:8px">
              <a class="btn" href="/hoteles" style="border-color:#334155;color:#e5e7eb">Cancelar</a>
              <button class="btn btn-success" type="submit">Guardar</button>
            </div>
          </form>
        </div>
      </div>
    </section>
  </div>
</body>
</html>
