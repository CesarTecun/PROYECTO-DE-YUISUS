<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Reservas</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <header class="container">
    <h1>Reservas</h1>
    <nav class="nav">
      <a href="/">Inicio</a>
      <% if (user) { %>
        <a href="/reservas/new">Nueva reserva</a>
        <span style="flex:1"></span>
        <span>Hola, <strong><%= user.username %></strong></span>
        <a href="/logout">Salir</a>
      <% } else { %>
        <a href="/login">Login</a>
        <a href="/register">Registro</a>
      <% } %>
    </nav>
  </header>
  <main class="container">
    <div class="card">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th><th>Fecha</th><th>Turista</th><th>Sucursal</th><th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% for (const it of items) { %>
            <tr>
              <td><%= it.ID_RESERVA %></td>
              <td><%= it.FECHA_RESERVA %></td>
              <td><%= it.COD_TURISTA %></td>
              <td><%= it.COD_SUCURSAL %></td>
              <td>
                <a href="/reservas/<%= it.ID_RESERVA %>/edit">Editar</a>
                <form method="post" action="/reservas/<%= it.ID_RESERVA %>/delete" style="display:inline" onsubmit="return confirm('Â¿Eliminar reserva <%= it.ID_RESERVA %>?');">
                  <button type="submit">Eliminar</button>
                </form>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </main>
</body>
</html>
