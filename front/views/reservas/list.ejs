<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Reservas</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="layout">
    <aside class="sidebar">
      <%- include('../partials/sidebar', { user: user, active: 'reservas' }) %>
    </aside>
    <section class="main">
      <%- include('../partials/topbar', { user: user }) %>
      <div class="content">
        <div class="card">
          <div style="text-align:right; margin-bottom:8px;">
            <a class="btn btn-success" href="/reservas/new">Nueva reserva</a>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th>ID</th><th>Fecha</th><th>Turista</th><th>Sucursal</th><th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% for (const it of items) { %>
                <tr>
                  <td><%= it.ID_RESERVA %></td>
                  <td><%= it.FECHA_RESERVA %></td>
                  <td><%= it.COD_TURISTA %></td>
                  <td><%= it.COD_SUCURSAL %></td>
                  <td>
                    <a class="btn" style="border-color:#334155;color:#e5e7eb" href="/reservas/<%= it.ID_RESERVA %>/edit">Editar</a>
                    <form method="post" action="/reservas/<%= it.ID_RESERVA %>/delete" style="display:inline" onsubmit="return confirm('Â¿Eliminar reserva <%= it.ID_RESERVA %>?');">
                      <button class="btn btn-danger" type="submit">Eliminar</button>
                    </form>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  </div>
</body>
</html>
