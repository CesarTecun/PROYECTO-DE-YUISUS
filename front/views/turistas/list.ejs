<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Turistas</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="layout">
    <aside class="sidebar">
      <div class="brand">
        <div class="brand-badge">AV</div>
        <div>Agencia de Viajes</div>
      </div>
      <div class="side-group">
        <div class="side-title">Menú</div>
        <a class="side-link" href="/">Inicio</a>
        <a class="side-link" href="/sucursales">Sucursales</a>
        <a class="side-link" href="/hoteles">Hoteles</a>
        <a class="side-link" href="/vuelos">Vuelos</a>
        <a class="side-link active" href="/turistas">Turistas</a>
      </div>
    </aside>
    <section class="main">
      <div class="topbar">
        <div style="flex:1"></div>
        <% if (user) { %>
          <div style="color:#cbd5e1;">Hola, <strong><%= user.username %></strong></div>
          <a class="btn btn-primary" href="/logout">Salir</a>
        <% } else { %>
          <a class="btn btn-primary" href="/login">Login</a>
          <a class="btn" href="/register" style="border-color:#334155;color:#e5e7eb">Registro</a>
        <% } %>
        <div class="avatar"></div>
      </div>
      <div class="content">
        <div class="table-card">
          <div class="table-toolbar">
            <span style="flex:1"></span>
            <a class="btn btn-success" href="/turistas/new">Nuevo turista</a>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th>Código</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>País</th>
                <th class="th-right">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% for (const it of items) { %>
                <tr>
                  <td><%= it.COD_TURISTA %></td>
                  <td><%= [it.NOMBRE1, it.NOMBRE2, it.NOMBRE3].filter(Boolean).join(' ') %></td>
                  <td><%= [it.APELLIDO1, it.APELLIDO2].filter(Boolean).join(' ') %></td>
                  <td><%= it.PAIS_RESIDENCIA || '' %></td>
                  <td>
                    <div class="td-actions" style="justify-content:flex-end">
                      <a class="btn" style="border-color:#334155;color:#e5e7eb" href="/turistas/<%= it.COD_TURISTA %>/edit">Editar</a>
                      <form method="post" action="/turistas/<%= it.COD_TURISTA %>/delete" onsubmit="return confirm('¿Eliminar turista <%= it.COD_TURISTA %>?');">
                        <button class="btn btn-danger" type="submit">Eliminar</button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  </div>
</body>
</html>
