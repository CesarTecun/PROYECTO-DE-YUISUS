<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Turistas</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="layout">
    <aside class="sidebar">
      <%- include('../partials/sidebar', { user: user, active: 'turistas' }) %>
    </aside>
    <section class="main">
      <%- include('../partials/topbar', { user: user }) %>
      <div class="content">
        <div class="table-card">
          <div class="table-toolbar">
            <span style="flex:1"></span>
            <a class="btn btn-success" href="/turistas/new">Nuevo turista</a>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th>Código</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>País</th>
                <th class="th-right">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% for (const it of items) { %>
                <tr>
                  <td><%= it.COD_TURISTA %></td>
                  <td><%= [it.NOMBRE1, it.NOMBRE2, it.NOMBRE3].filter(Boolean).join(' ') %></td>
                  <td><%= [it.APELLIDO1, it.APELLIDO2].filter(Boolean).join(' ') %></td>
                  <td><%= it.PAIS_RESIDENCIA || '' %></td>
                  <td>
                    <div class="td-actions" style="justify-content:flex-end">
                      <a class="btn-edit" href="/turistas/<%= it.COD_TURISTA %>/edit">Editar</a>
                      <form method="post" action="/turistas/<%= it.COD_TURISTA %>/delete" onsubmit="return confirm('¿Eliminar turista <%= it.COD_TURISTA %>?');">
                        <button class="btn-delete" type="submit">Eliminar</button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  </div>
</body>
</html>
