<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <title>Usuarios - Panel de Administración</title>
  <link rel="stylesheet" href="/styles.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    .btn-success i {
      margin-right: 8px;
    }
    .table th {
      background-color: #f3f4f6;
      font-weight: 600;
    }
    .badge {
      display: inline-block;
      padding: 0.35em 0.65em;
      font-size: 0.75em;
      font-weight: 600;
      line-height: 1;
      text-align: center;
      white-space: nowrap;
      vertical-align: baseline;
      border-radius: 0.25rem;
    }
    .badge-success {
      background-color: #d1fae5;
      color: #065f46;
    }
    .badge-danger {
      background-color: #fee2e2;
      color: #991b1b;
    }
    .btn-edit, .btn-delete {
      padding: 6px 12px;
      border-radius: 4px;
      font-size: 0.875rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s;
      display: inline-flex;
      align-items: center;
      gap: 4px;
    }
    .btn-edit {
      background-color: #3b82f6;
      color: white;
      border: 1px solid #2563eb;
    }
    .btn-edit:hover {
      background-color: #2563eb;
    }
    .btn-delete {
      background-color: #ef4444;
      color: white;
      border: 1px solid #dc2626;
    }
    .btn-delete:hover {
      background-color: #dc2626;
    }
    .action-buttons {
      display: flex;
      gap: 8px;
      flex-wrap: wrap;
    }
  </style>
<body>
  <div class="layout">
    <aside class="sidebar">
      <%- include('../partials/sidebar', { user: user, active: 'usuarios' }) %>
    </aside>
    <section class="main">
      <%- include('../partials/topbar', { user: user }) %>
      <div class="content">
        <div class="table-card">
          <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold text-gray-800">
              <i class="fas fa-users mr-2"></i>Usuarios del Sistema
            </h1>
            <a class="btn btn-success" href="/usuarios/new">
              <i class="fas fa-user-plus"></i>Nuevo Usuario
            </a>
          </div>
          <div class="card">
      <table class="table">
        <thead>
          <tr>
            <th><i class="fas fa-hashtag mr-1"></i> ID</th>
            <th><i class="fas fa-user mr-1"></i> Usuario</th>
            <th><i class="fas fa-id-card mr-1"></i> Nombre</th>
            <th><i class="fas fa-user-tag mr-1"></i> Rol</th>
            <th><i class="fas fa-circle mr-1"></i> Estado</th>
            <th><i class="fas fa-cog mr-1"></i> Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% for (const it of items) { %>
            <tr>
              <td><%= it.ID_USUARIO %></td>
              <td><%= it.USERNAME %></td>
              <td><%= it.NOMBRE_COMPLETO %></td>
              <td>
                <span class="badge <%= it.ROL === 'ADMIN' ? 'badge-danger' : 'badge-success' %>">
                  <%= it.ROL %>
                </span>
              </td>
              <td>
                <span class="badge <%= it.ACTIVO === 'S' ? 'badge-success' : 'badge-danger' %>">
                  <%= it.ACTIVO === 'S' ? 'Activo' : 'Inactivo' %>
                </span>
              </td>
              <td>
                <div class="action-buttons">
                  <a class="btn-edit" href="/usuarios/<%= it.ID_USUARIO %>/edit">
                    <i class="fas fa-edit"></i> Editar
                  </a>
                  <form method="post" action="/usuarios/<%= it.ID_USUARIO %>/delete" 
                        onsubmit="return confirm('¿Estás seguro de eliminar al usuario <%= it.USERNAME %>?');">
                    <button class="btn-delete" type="submit">
                      <i class="fas fa-trash"></i> Eliminar
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
          </div>
        </div>
      </div>
    </section>
  </div>
</body>
</html>
