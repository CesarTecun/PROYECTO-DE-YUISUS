<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Usuarios</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="layout">
    <aside class="sidebar">
      <%- include('../partials/sidebar', { user: user, active: 'usuarios' }) %>
    </aside>
    <section class="main">
      <%- include('../partials/topbar', { user: user }) %>
      <div class="content">
        <div class="table-card">
          <div class="table-toolbar">
            <span style="flex:1"></span>
            <a class="btn btn-success" href="/usuarios/new">Nuevo usuario</a>
          </div>
          <div class="card">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th><th>Usuario</th><th>Nombre</th><th>Rol</th><th>Activo</th><th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% for (const it of items) { %>
            <tr>
              <td><%= it.ID_USUARIO %></td>
              <td><%= it.USERNAME %></td>
              <td><%= it.NOMBRE_COMPLETO %></td>
              <td><%= it.ROL %></td>
              <td><%= it.ACTIVO %></td>
              <td>
                <a class="btn" style="border-color:#334155;color:#e5e7eb" href="/usuarios/<%= it.ID_USUARIO %>/edit">Editar</a>
                <form method="post" action="/usuarios/<%= it.ID_USUARIO %>/delete" style="display:inline" onsubmit="return confirm('Â¿Eliminar usuario?');">
                  <button class="btn btn-danger" type="submit">Eliminar</button>
                </form>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
          </div>
        </div>
      </div>
    </section>
  </div>
</body>
</html>
