<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Nuevo usuario</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="layout">
    <aside class="sidebar">
      <%- include('../partials/sidebar', { user: user, active: 'usuarios' }) %>
    </aside>
    <section class="main">
      <%- include('../partials/topbar', { user: user }) %>
      <div class="content">
        <form class="card form" method="post" action="/usuarios">
      <label>Usuario</label>
      <input name="username" required />
      <label>Nombre completo</label>
      <input name="nombre" />
      <label>Rol</label>
      <input name="rol" placeholder="ADMIN o USUARIO" />
      <label>Activo</label>
      <input name="activo" placeholder="S o N" value="S" />
      <label>Contrase√±a</label>
      <input type="password" name="password" placeholder="(por defecto 'changeme')" />
      <button type="submit">Crear</button>
        </form>
      </div>
    </section>
  </div>
</body>
</html>
