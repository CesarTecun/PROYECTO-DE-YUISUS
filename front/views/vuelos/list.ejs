<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Vuelos</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="layout">
    <aside class="sidebar">
      <%- include('../partials/sidebar', { user: user, active: 'vuelos' }) %>
    </aside>
    <section class="main">
      <%- include('../partials/topbar', { user: user }) %>
      <div class="content">
        <div class="table-card">
          <div class="table-toolbar">
            <span style="flex:1"></span>
            <a class="btn btn-success" href="/vuelos/new">Nuevo vuelo</a>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th>Número</th>
                <th>Fecha/Hora</th>
                <th>Origen</th>
                <th>Destino</th>
                <th>Plazas Totales</th>
                <th>Plazas Turista</th>
                <th class="th-right">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% for (const it of items) { %>
                <tr>
                  <td><%= it.NUM_VUELO %></td>
                  <td><%= it.FECHA_HORA %></td>
                  <td><%= it.ORIGEN %></td>
                  <td><%= it.DESTINO %></td>
                  <td><%= it.PLAZAS_TOTALES %></td>
                  <td><%= it.PLAZAS_TURISTA %></td>
                  <td>
                    <div class="td-actions" style="justify-content:flex-end">
                      <a class="btn-edit" href="/vuelos/<%= it.NUM_VUELO %>/edit">Editar</a>
                      <form method="post" action="/vuelos/<%= it.NUM_VUELO %>/delete" onsubmit="return confirm('¿Eliminar vuelo <%= it.NUM_VUELO %>?');">
                        <button class="btn-delete" type="submit">Eliminar</button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  </div>
</body>
</html>
