<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Vuelos</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <header class="container">
    <h1>Vuelos</h1>
    <nav class="nav">
      <a href="/">Inicio</a>
      <% if (user) { %>
        <a href="/sucursales">Sucursales</a>
        <a href="/hoteles">Hoteles</a>
        <a href="/vuelos">Vuelos</a>
        <a href="/turistas">Turistas</a>
        <a href="/reservas">Reservas</a>
        <span style="flex:1"></span>
        <span>Hola, <strong><%= user.username %></strong></span>
        <a href="/logout">Salir</a>
        <span style="margin-left:12px"></span>
        <a href="/vuelos/new">Nuevo vuelo</a>
      <% } else { %>
        <a href="/login">Login</a>
        <a href="/register">Registro</a>
      <% } %>
    </nav>
  </header>
  <main class="container">
    <div class="card">
      <table class="table">
        <thead>
          <tr>
            <th>Número</th><th>Fecha/Hora</th><th>Origen</th><th>Destino</th><th>Plazas Totales</th><th>Plazas Turista</th><th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% for (const it of items) { %>
            <tr>
              <td><%= it.NUM_VUELO %></td>
              <td><%= it.FECHA_HORA %></td>
              <td><%= it.ORIGEN %></td>
              <td><%= it.DESTINO %></td>
              <td><%= it.PLAZAS_TOTALES %></td>
              <td><%= it.PLAZAS_TURISTA %></td>
              <td>
                <a href="/vuelos/<%= it.NUM_VUELO %>/edit">Editar</a>
                <form method="post" action="/vuelos/<%= it.NUM_VUELO %>/delete" style="display:inline" onsubmit="return confirm('¿Eliminar vuelo <%= it.NUM_VUELO %>?');">
                  <button type="submit">Eliminar</button>
                </form>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </main>
</body>
</html>
