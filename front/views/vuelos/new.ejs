<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <title>Nuevo Vuelo - Agencia de Viajes</title>
  <link rel="stylesheet" href="/styles.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body class="auth-page">
  <div class="auth-container">
    <div class="auth-card" style="max-width: 800px;">
      <div class="auth-header">
        <div class="auth-logo">AV</div>
        <h1 class="auth-title">Nuevo Vuelo</h1>
        <p class="auth-subtitle">Complete el formulario para programar un nuevo vuelo</p>
      </div>

      <% if (error) { %>
        <div class="alert error" style="margin-bottom: 1.5rem;"><%= error %></div>
      <% } %>

      <form class="auth-form" method="post" action="/vuelos">
        <div class="form-row" style="display: flex; gap: 1rem; margin-bottom: 1rem;">
          <div class="form-group" style="flex: 1;">
            <label for="num">Número de Vuelo *</label>
            <input 
              type="text" 
              id="num" 
              name="num" 
              class="form-control" 
              value="<%= formData && formData.num || '' %>"
              placeholder="Ej: AV123"
              required 
              autofocus
            />
            <small class="text-muted">Código único del vuelo (ej: AV123)</small>
          </div>
          
          <div class="form-group" style="flex: 1;">
            <label for="fechaHora">Fecha y Hora *</label>
            <input 
              type="datetime-local" 
              id="fechaHora" 
              name="fechaHora" 
              class="form-control" 
              value="<%= formData && formData.fechaHora || '' %>"
              required
            />
            <small class="text-muted">Formato: YYYY-MM-DDTHH:MM</small>
          </div>
        </div>

        <div class="form-row" style="display: flex; gap: 1rem; margin-bottom: 1rem;">
          <div class="form-group" style="flex: 1;">
            <label for="origen">Origen *</label>
            <input 
              type="text" 
              id="origen" 
              name="origen" 
              class="form-control" 
              value="<%= formData && formData.origen || '' %>"
              placeholder="Ej: MEX"
              required
            />
            <small class="text-muted">Código de aeropuerto (3 letras)</small>
          </div>
          
          <div class="form-group" style="flex: 1;">
            <label for="destino">Destino *</label>
            <input 
              type="text" 
              id="destino" 
              name="destino" 
              class="form-control" 
              value="<%= formData && formData.destino || '' %>"
              placeholder="Ej: CUN"
              required
            />
            <small class="text-muted">Código de aeropuerto (3 letras)</small>
          </div>
        </div>

        <div class="form-row" style="display: flex; gap: 1rem; margin-bottom: 1.5rem;">
          <div class="form-group" style="flex: 1;">
            <label for="plazasTotales">Plazas Totales *</label>
            <input 
              type="number" 
              id="plazasTotales" 
              name="plazasTotales" 
              class="form-control" 
              min="0" 
              value="<%= formData && formData.plazasTotales || '0' %>"
              required
            />
          </div>
          
          <div class="form-group" style="flex: 1;">
            <label for="plazasTurista">Plazas Turista *</label>
            <input 
              type="number" 
              id="plazasTurista" 
              name="plazasTurista" 
              class="form-control" 
              min="0" 
              value="<%= formData && formData.plazasTurista || '0' %>"
              required
            />
            <small class="text-muted" id="plazasInfo"></small>
          </div>
        </div>

        <div style="margin-top: 2rem; display: flex; gap: 1rem;">
          <a href="/vuelos" class="btn-auth btn-secondary" style="flex: 1; text-align: center;">
            Cancelar
          </a>
          <button type="submit" class="btn-auth btn-primary" style="flex: 1;">
            Programar Vuelo
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Validación en tiempo real de plazas
    document.addEventListener('DOMContentLoaded', function() {
      const plazasTotales = document.getElementById('plazasTotales');
      const plazasTurista = document.getElementById('plazasTurista');
      const plazasInfo = document.getElementById('plazasInfo');

      function actualizarMensajePlazas() {
        const total = parseInt(plazasTotales.value) || 0;
        const turista = parseInt(plazasTurista.value) || 0;
        
        if (turista > total) {
          plazasInfo.textContent = '¡Atención! Las plazas turista no pueden ser más que las totales';
          plazasInfo.style.color = '#ef4444';
          plazasTurista.setCustomValidity('Las plazas turista no pueden ser más que las totales');
        } else {
          const ejecutiva = total - turista;
          plazasInfo.textContent = `${ejecutiva} plazas ejecutivas disponibles`;
          plazasInfo.style.color = '';
          plazasTurista.setCustomValidity('');
        }
      }

      plazasTotales.addEventListener('input', actualizarMensajePlazas);
      plazasTurista.addEventListener('input', actualizarMensajePlazas);
      
      // Ejecutar al cargar la página
      actualizarMensajePlazas();
    });
  </script>
</body>
</html>
